        // DOM Elements
        const pages = {
            home: document.getElementById('home-page'),
            phases: document.getElementById('phases-page'),
            resources: document.getElementById('resources-page'),
            community: document.getElementById('community-page')
        };

        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            // Create stars
            createStars();
            
            // Set up navigation
            setupNavigation();
            
            // Set up mood selector
            setupMoodSelector();
            
            // Set up phase navigation
            setupPhaseNavigation();
            
            // Load resources
            loadResources();
            
            // Set up community form
            setupCommunityForm();
            
            // Set current phase button
            setupCurrentPhaseButton();
            
            // Show home page by default
            showPage('home');
            
            // Set up intersection observer for animations
            setupAnimations();
        });

        // Functions
        function createStars() {
            const starsContainer = document.getElementById('stars-container');
            const starCount = 100;
            
            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                
                // Random properties
                const size = Math.random() * 3;
                const opacity = 0.2 + Math.random() * 0.8;
                const duration = 3 + Math.random() * 5;
                
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.left = `${Math.random() * 100}%`;
                star.style.top = `${Math.random() * 100}%`;
                star.style.setProperty('--opacity', opacity);
                star.style.setProperty('--duration', `${duration}s`);
                
                // Twinkle delay
                star.style.animationDelay = `${Math.random() * 5}s`;
                
                starsContainer.appendChild(star);
            }
        }

        function setupNavigation() {
            // Mobile menu toggle
            const menuBtn = document.querySelector('.mobile-menu-btn');
            const navLinks = document.querySelector('.nav-links');
            
            menuBtn.addEventListener('click', function() {
                navLinks.classList.toggle('active');
                menuBtn.textContent = navLinks.classList.contains('active') ? 'âœ•' : 'â˜¾';
            });
            
            // Page navigation
            const navLinksAll = document.querySelectorAll('.nav-link');
            navLinksAll.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const page = this.dataset.page;
                    showPage(page);
                    
                    // Close mobile menu if open
                    navLinks.classList.remove('active');
                    menuBtn.textContent = 'â˜¾';
                });
            });
            
            // Home logo link
            document.getElementById('home-link').addEventListener('click', function(e) {
                e.preventDefault();
                showPage('home');
            });
        }

        function showPage(pageName) {
            // Hide all pages
            Object.values(pages).forEach(page => {
                page.classList.remove('active');
            });
            
            // Show selected page
            pages[pageName].classList.add('active');
            
            // Scroll to top
            window.scrollTo(0, 0);
            
            // Update active nav link
            updateActiveNavLink(pageName);
        }

        function updateActiveNavLink(pageName) {
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                if (link.dataset.page === pageName) {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
        }

        function setupMoodSelector() {
            const moodOptions = document.querySelectorAll('.mood-option');
            moodOptions.forEach(option => {
                option.addEventListener('click', function() {
                    moodOptions.forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                    
                    // In a real app, you would track mood selection here
                    console.log(`Mood selected: ${this.dataset.mood}`);
                    
                    // Show a confirmation message
                    const moods = {
                        'new-moon': 'New Moon - A time for reflection and new beginnings',
                        'waxing': 'Waxing Moon - Energy for growth and action',
                        'full': 'Full Moon - Clarity and illumination',
                        'waning': 'Waning Moon - Release and letting go',
                        'eclipse': 'Eclipse - Powerful transformation energy'
                    };
                    
                    alert(`You've selected: ${moods[this.dataset.mood]}`);
                });
            });
        }

        function setupPhaseNavigation() {
            const phaseLinks = document.querySelectorAll('.phase-link');
            const phaseContents = document.querySelectorAll('.phase-content');
            
            phaseLinks.forEach(link => {
                link.addEventListener('click', function() {
                    const phase = this.dataset.phase;
                    
                    // Update active phase link
                    phaseLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show corresponding content
                    phaseContents.forEach(content => {
                        content.classList.remove('active');
                        if (content.id === `${phase}-content`) {
                            content.classList.add('active');
                        }
                    });
                });
            });
        }

        function loadResources() {
            const resourcesContainer = document.getElementById('resources-container');
            
            appData.resources.forEach(resource => {
                const resourceCard = document.createElement('div');
                resourceCard.className = 'resource-card fade-in';
                resourceCard.innerHTML = `
                    <div class="resource-image" style="background-image: url('${resource.image}')"></div>
                    <div class="resource-content">
                        <span class="resource-category">${resource.category}</span>
                        <h3 class="resource-title">${resource.title}</h3>
                        <p class="resource-desc">${resource.description}</p>
                        <a href="#" class="btn btn-outline">Explore</a>
                    </div>
                `;
                
                resourcesContainer.appendChild(resourceCard);
            });
        }

        function setupCommunityForm() {
            const form = document.getElementById('post-form');
            const postsContainer = document.getElementById('community-posts');
            
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const name = document.getElementById('post-name').value;
                const content = document.getElementById('post-content').value;
                
                if (name && content) {
                    // Create new post
                    const newPost = {
                        id: appData.posts.length + 1,
                        user: name,
                        avatar: 'ðŸŒ™',
                        date: 'Just now',
                        content: content,
                        likes: 0,
                        comments: 0
                    };
                    
                    // Add to data
                    appData.posts.unshift(newPost);
                    
                    // Create post element
                    const postElement = document.createElement('div');
                    postElement.className = 'post fade-in';
                    postElement.innerHTML = `
                        <div class="post-header">
                            <div class="post-avatar">${newPost.avatar}</div>
                            <div>
                                <div class="post-user">${newPost.user}</div>
                                <div class="post-date">${newPost.date}</div>
                            </div>
                        </div>
                        <div class="post-content">
                            ${newPost.content}
                        </div>
                        <div class="post-actions">
                            <div class="post-action">âœ¨ ${newPost.likes}</div>
                            <div class="post-action">ðŸ’¬ ${newPost.comments}</div>
                            <div class="post-action">ðŸ”„ Share</div>
                        </div>
                    `;
                    
                    // Insert at the top
                    postsContainer.insertBefore(postElement, postsContainer.firstChild);
                    
                    // Reset form
                    form.reset();
                    
                    // Show success message
                    alert('Your post has been shared with the cosmic community!');
                }
            });
        }

        function setupCurrentPhaseButton() {
            const btn = document.getElementById('current-phase-btn');
            
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                
                // In a real app, this would calculate the actual current moon phase
                const phases = {
                    'new-moon': 'New Moon',
                    'waxing': 'Waxing Moon',
                    'full-moon': 'Full Moon',
                    'waning': 'Waning Moon'
                };
                
                alert(`Based on your location and the current date, you're in the ${phases[appData.currentPhase]} phase. This is a time for ${getPhaseDescription(appData.currentPhase)}.`);
            });
        }

        function getPhaseDescription(phase) {
            const descriptions = {
                'new-moon': 'reflection and setting new intentions',
                'waxing': 'growth and taking action',
                'full-moon': 'clarity and releasing what no longer serves you',
                'waning': 'letting go and preparing for renewal'
            };
            
            return descriptions[phase] || 'connecting with lunar energy';
        }

        function setupAnimations() {
            const fadeElements = document.querySelectorAll('.fade-in');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = 1;
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });
            
            fadeElements.forEach(el => {
                el.style.opacity = 0;
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
                observer.observe(el);
            });
        }
    </script>
</body>
